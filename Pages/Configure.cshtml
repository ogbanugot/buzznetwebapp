@page
@model IndexModel
@{
    ViewData["Title"] = "Configure";
}

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Configuration string</div>
        <div class="col-4"><textarea type="text" id="configstring" cols="90" rows="5"></textarea></div>
    </div>
    <br />
    <div class="row">
        <div class="col-2">Training algorithm</div>
        <div class="col-4"><textarea type="text" id="algorithm" cols="90" rows="5"></textarea></div>
    </div>
    <br />
    <div class="row">
        <div class="col-2">Choose dataset</div>
        <select id="dataset">
            <option></option>
            <option value="MNIST">MNIST</option>
            <option value="CFAIR">CIFAR</option>
            @if (Model.DataFiles.Count() != 0)
            {
                @foreach (var file in Model.DataFiles)
                {
                    <option value=@file.PhysicalPath>@file.PhysicalPath</option>
                }
            }
        </select>
    </div>
    <br />
    <div class="row">
        <div class="col-2">Save model as:</div>
        <div class="col-4"><input type="text" id="filename"></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <button type="button" class="btn btn-primary" id="sendButton">Configure and Train</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <div class="col-4"><textarea type="text" id="feedback" cols="90" rows="5" readonly></textarea></div>
        <br />
        <div class="col-4">
            <button type="button" class="btn btn-primary" id="testButton">
                Test Model
            </button>
            <div id="download"><a class="nav-link text-dark" asp-area="" asp-page="/Index">Download Model</a></div>
        </div>
    </div>
</div>
